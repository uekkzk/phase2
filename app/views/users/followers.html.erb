<h3>Follower Users</h3>
    <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    </thead>
    <tbody>
      <% @user.follower_user.each do |user| %>
        <tr>
          <th><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "No_Image.png", size: "50x50" %></th>
          <th><%= user.name %></th>
          <th><%= "フォロー数: #{user.follower.count}" %></th>
          <th><%= "フォロワー数: #{user.followed.count}" %></th>
          <th><%= link_to "Show", user_path(user.id) %></th>
        </tr>
        <% end %>
    </tboby>
  </table>